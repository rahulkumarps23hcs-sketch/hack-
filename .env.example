# Environment configuration for Patient Management & Mental Health Tracker
# Copy this file to `.env` and fill in real values before running any services.

# Application
APP_ENV=development
APP_PORT=4000

# Database
DB_HOST=localhost
DB_PORT=5432
DB_NAME=pm_mh_tracker
DB_USER=your_db_user
DB_PASSWORD=your_db_password

# API
API_BASE_URL=http://localhost:4000/api

# Authentication / Sessions
JWT_SECRET=change_me_jwt_secret
SESSION_SECRET=change_me_session_secret

# SMS / Notifications (e.g., Twilio)
SMS_PROVIDER=twilio
SMS_ACCOUNT_SID=your_twilio_account_sid
SMS_AUTH_TOKEN=your_twilio_auth_token
SMS_FROM_NUMBER=+10000000000

# Email (optional)
EMAIL_SMTP_HOST=smtp.example.com
EMAIL_SMTP_PORT=587
EMAIL_SMTP_USER=your_smtp_user
EMAIL_SMTP_PASSWORD=your_smtp_password
EMAIL_FROM=noreply@example.com
